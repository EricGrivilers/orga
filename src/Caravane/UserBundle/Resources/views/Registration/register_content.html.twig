{% form_theme form theme %}

<div class="row-fluid">
	<div class="span6">
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register" novalidate >

	{% if app.session.hasFlash('info') %} 
    <div id="flashmessage" class="alert alert-info"> 
    	
       {{name}} {{ app.session.flash('info') }} 
   </div> 
{% endif %} 

    {#{ form_widget(form) }#}
    {{ form_row(form._token) }}
    {{ form_row(form.username) }}

    

    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword) }}

    {{form_row(form.lastname)}}
    {{form_row(form.firstname)}}

    <div >
    	<div class="inline-form" style="display:inline">
		   
		   
		    {{ form_widget(form.newsletter) }} I want to receive ETNO's newsletter<br/>
		    {{ form_widget(form.event) }} I want to be informed about ETNO's events
		</div>
		
 <br/>
 <br/>
   <!-- <input type="checkbox" name="newsletterRegistration" value="1" /> I want to receive ETNO's newsletter<br/>
    <input type="checkbox" name="eventsRegistration" value="1" /> I want to be informed about ETNO's events<br/><br/>-->
</div>
    {#{ form_row(form.plainPassword_second) }#}
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
</form>
</div>
<div class="span6"  >


<div class="alert alert-info" style="text-align:center;font-size:13px"><b>If you are a registred ETNO member,<br/>please <a href="{{path('CaravaneCmsBundle_page',{'uri':'member-login'})}}">click here</a>.</b></div></div>
</div>
