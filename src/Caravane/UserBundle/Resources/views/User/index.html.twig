{% extends "::base.html.twig" %}

{% block body %}
<div class="row-fluid">
    <div class="tools">
        <div class="span10">

</div>
<div class="span2">
     <a href="{{ path('user_new') }}" class="btn btn-inverse ">
            New user
        </a>
    </div>
    </div>
</div>
<div class="row-fluid">

<table class="table table-bordered table-condensed table-striped">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Iso</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Mobile</th>
            <th>Lastlog</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>

            <td>{{ entity.firstname }}</td>
            <td>{{ entity.lastname }}</td>
            <td>{{ entity.iso }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.phone }}</td>
            <td>{{ entity.fax }}</td>
            <td>{% if entity.lastlog %}{{ entity.lastlog|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

</div>
<div class="row-fluid">
    <div class="pagination">
  <ul>
    <li {% if page<=1 %} class="disabled" {% endif %} ><a href="{{path('user',{'type': type,'ob':ob,'page':page-1} )}}" >Prev</a></li>
    {% for p in 1..nbpages %}
    <li {% if page==p %} class="active" {% endif %} ><a href="{{path('user',{'type': type,'ob':ob,'page':p} )}}">{{p}}</a></li>
    {% endfor %}
    <li {% if page>=nbpages %} class="disabled" {% endif %}><a href="{{path('user',{'type': type,'ob':ob,'page':page+1} )}}">Next</a></li>
  </ul>
</div>
</div>
{% endblock body %}
