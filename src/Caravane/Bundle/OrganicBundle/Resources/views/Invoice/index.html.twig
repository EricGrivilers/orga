{% extends "::base.html.twig" %}

{% block body %}

<div class="row-fluid">
    <div class="tools">
        <div class="span10">
        <ul class="nav nav-pills">
        <li {% if type=='' %}class="active" {% endif %} >
            <a href="{{path('invoice',{'ob':ob})}}">All</a>
          </li>
          <li {% if type=='open' %}class="active" {% endif %} ><a href="{{path('invoice',{'type': 'open','ob':ob,'page':1} )}}">Open</a></li>
          <li {% if type=='paid' %}class="active" {% endif %} ><a href="{{path('invoice',{'type':'paid','ob':ob,'page':1})}}">Paid</a></li>
          <li {% if type=='todo' %}class="active" {% endif %} ><a href="{{path('invoice',{'type':'todo','ob':ob,'page':1})}}">To do</a></li>
          <li {% if type=='draft' %}class="active" {% endif %} ><a href="{{path('invoice',{'type':'draft','ob':ob,'page':1})}}">Draft</a></li>

        </ul>
</div>

<div class="span2">
     <a href="{{ path('invoice_new') }}" class="btn btn-inverse ">
            New invoice
        </a>
    </div>
    </div>
</div>
<div class="row-fluid">




<table class="table table-bordered table-condensed table-striped">
    <thead>
        <tr>
            <th>Reference</th>
            <th>Client</th>
            <th>Type</th>
            <th>Date</th>
            <th>Amm. VAT Excl.</th>
            <th>Amm. VAT Incl..</th>
            <th>Slice</th>




             <th>Job</th>
             <th>Status</th>
             <th>Country</th>
             <th>Account</th>
             <th>PDF</th>
             <th>R1</th>
             <th>R2</th>
             <th>MD</th>

             <th>Ed</th>
            <th>Del</th>

        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('invoice_edit', { 'id': entity.id }) }}">{{ entity.reference }}</a></td>
            <td>{% if entity.clientid %} <a href="{{ path('client_edit', { 'id': entity.clientid.id }) }}">{{ entity.clientid.name }}</a> {% endif %}</td>
            <td>{{ entity.offretype }}</td>
            <td>{{ entity.insertDate|date('d/m/Y') }}</td>

            <td>{{entity.priceHT|number_format(2,',',' ')}}</td>
            <td>{% if entity.priceType=='intra' %}<i>intra</i>{% else %} {{entity.priceTTC|number_format(2,',',' ')}}{% endif %}</td>

            <td> {% if entity.jobid %}{{entity.cSlice}}/{{entity.jobid.slices|length()}}{% endif %}</td>
            <td>{% if entity.jobid %} <a href="{{path('job_edit',{'id':entity.jobid.id})}}" class='red' >{{entity.jobid}}</a>{% endif %}</td>
            <td>{{entity.status}}</td>
            <td>{{entity.country}}</td>


             <td>{% if entity.jobid %}<a href="mailto:{{entity.jobid.userid.email}}">{{entity.jobid.userid.name}}</a>{% endif %}</td>










             <td>
                <li class="dropdown">
                    <a class="dropdown-toggle" id="drop4" role="button" data-toggle="dropdown" href="#"><img src="/images/icons/pdf.png"> <b class="caret"></b></a>
                    <ul id="menu1" class="dropdown-menu" role="menu" aria-labelledby="drop4">
                        {% for lg in ['en','fr','nl'] %}
                            <li role="presentation">
                                <a role="menuitem" href=""><img src="/images/icons/pdf.png"> Invoice {{lg}}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            </td>
             <td>
                <li class="dropdown">
                    <a class="dropdown-toggle" id="drop4" role="button" data-toggle="dropdown" href="#"><img src="/images/icons/pdf.png"> <b class="caret"></b></a>
                    <ul id="menu1" class="dropdown-menu" role="menu" aria-labelledby="drop4">
                        {% for lg in ['en','fr','nl'] %}
                            <li role="presentation">
                                <a role="menuitem" href=""><img src="/images/icons/pdf.png"> Reminder 1 {{lg}}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            </td>
            <td>
                <li class="dropdown">
                    <a class="dropdown-toggle" id="drop4" role="button" data-toggle="dropdown" href="#"><img src="/images/icons/pdf.png"> <b class="caret"></b></a>
                    <ul id="menu1" class="dropdown-menu" role="menu" aria-labelledby="drop4">
                        {% for lg in ['en','fr','nl'] %}
                            <li role="presentation">
                                <a role="menuitem" href=""><img src="/images/icons/pdf.png"> Reminder 2  {{lg}}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            </td>
            <td>
                <li class="dropdown">
                    <a class="dropdown-toggle" id="drop4" role="button" data-toggle="dropdown" href="#"><img src="/images/icons/pdf.png"> <b class="caret"></b></a>
                    <ul id="menu1" class="dropdown-menu" role="menu" aria-labelledby="drop4">
                        {% for lg in ['en','fr','nl'] %}
                            <li role="presentation">
                                <a role="menuitem" href=""><img src="/images/icons/pdf.png"> Ultimatum {{lg}}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            </td>

              <td>
                <a href="{{ path('invoice_edit', { 'id': entity.id }) }}"><i class="icon icon-edit"></i></a>

            </td>
             <td>

                        <a href="{{ path('invoice_show', { 'id': entity.id }) }}"><i class="icon icon-trash"></i></a>


            </td>

        </tr>
    {% endfor %}
    </tbody>
</table>

</div>
<div class="row-fluid">
    <div class="pagination">
  <ul>
    <li {% if page<=1 %} class="disabled" {% endif %} ><a href="{{path('invoice',{'type': type,'ob':ob,'page':page-1} )}}" >Prev</a></li>
    {% for p in 1..nbpages %}
    <li {% if page==p %} class="active" {% endif %} ><a href="{{path('invoice',{'type': type,'ob':ob,'page':p} )}}">{{p}}</a></li>
    {% endfor %}
    <li {% if page>=nbpages %} class="disabled" {% endif %}><a href="{{path('invoice',{'type': type,'ob':ob,'page':page+1} )}}">Next</a></li>
  </ul>
</div>
</div>
{% endblock body %}
