{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Condition</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Fr</th>
                <td>{{ entity.fr }}</td>
            </tr>
            <tr>
                <th>En</th>
                <td>{{ entity.en }}</td>
            </tr>
            <tr>
                <th>Nl</th>
                <td>{{ entity.nl }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('condition') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('condition_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('condition_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
