{% extends "::base.html.twig" %}


{% block body %}

<div class="row-fluid">
<form action="{{ path('client_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>

    <div class="well">
        <div class="row-fluid">
            <div class="span4">
                Reference: <b>{{entity.reference}}</b>
                <br/>
                {{ form_row(edit_form.origin)}}
            </div>

             <div class="span4">
                {{ form_row(edit_form.language)}}
                <br/>
                {{ form_row(edit_form.userid)}}
            </div>

             <div class="span4">
                <a class="btn btn-inverse" href="{{path('offre_new_from_client',{'clientId':entity.id})}}">New offre</a>
            </div>
        </div>
    </div>

    {% if entity.tents %}
    <div class="row-fluid">
        <h4>Tents</h4>
        <table class="table table-condensed table-bordered table-striped">
            <thead>
                <tr>
                    <th>Reference</th>
                    <th>Name</th>
                    <th>Width</th>
                    <th>Length</th>
                    <th>Area</th>
                </tr>
            </thead>
            {% for tent in entity.tents %}
            <tr>
                <td><a href="{{path('tent_edit',{'id':tent.id})}}">{{tent.reference}}</a></td>
                <td>{{tent.name}}</td>
                <td>{{tent.width}}</td>
                <td>{{tent.length}}</td>
                <td>{{tent.m2}}</td>
            </tr>
            {% endfor %}
        </table>
    </div>
    {% endif %}

     <div class="row-fluid">
        <h4>Invoices</h4>
        <table class="table table-condensed table-bordered table-striped">
            <thead>
                <tr>
                    <th>Reference</th>
                    <th>Price VAT Exc.</th>
                    <th>Date</th>
                    <th>Job</th>
                    <th>Slice</th>
                    <th>Status</th>
                </tr>
            </thead>
            {% for invoice in entity.invoices %}
            <tr>
                <td><a href="{{path('invoice_edit',{'id':invoice.id})}}">{{invoice.reference}}</a></td>
                <td>{{invoice.priceht}}</td>
                <td>{{invoice.insertdate|date('Y-m-d')}}</td>
                <td>{{invoice.jobid}}</td>
                <td>{#{invoice.sliceId}#}</td>
                <td>{{invoice.status}}</td>
            </tr>
            {% endfor %}
        </table>
    </div>

     <div class="row-fluid">
        <h4>Jobs</h4>
         <table class="table table-condensed table-bordered table-striped">
            <thead>
                <tr>
                    <th>Reference</th>
                    <th>Price VAT Exc.</th>
                    <th>Build</th>
                    <th>Take off</th>
                    <th>Offre</th>
                    <th>Invoice</th>
                </tr>
            </thead>
            {% for job in entity.jobs %}
            <tr>
                <td><a href="{{path('job_edit',{'id':job.id})}}">{{job.reference}}</a></td>
                <td>{{job.price}}</td>
                <td>{{job.startBuild|date}}</td>
                <td>{{job.endBuild|date}}</td>
                <td>{{job.offreid}}</td>
                <td>{% for invoice in job.invoiceid %}<a href="{{path('invoice_edit',{'id':invoice.id} )}}">{{invoice.reference}}</a>{% endfor %}</td>
            </tr>
            {% endfor %}
        </table>
    </div>

     <div class="row-fluid">
        <h4>Offres</h4>
        <table class="table table-condensed table-bordered table-striped">
            <thead>
                <tr>
                    <th>Reference</th>
                    <th>Price VAT Exc.</th>
                    <th>Build</th>
                    <th>Take off</th>
                    <th>Status</th>
                </tr>
            </thead>
            {% for offre in entity.offres %}
            <tr>
                <td><a href="{{path('offre_edit',{'id':offre.id})}}">{{offre.reference}}</a></td>
                <td>{{offre.price}}</td>
                <td>{{offre.startBuild|date}}</td>
                <td>{{offre.endBuild|date}}</td>
                <td>{% if offre.jobid %}Job: <a href="{{path('job_edit',{'id':offre.jobid.id})}}">{{offre.jobid}}</a> {% else %}{{offre.status}} {% endif %}</td>
                
            </tr>
            {% endfor %}
        </table>
    </div>



    {{ form_rest(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('client') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('client_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
</div>
{% endblock body %}