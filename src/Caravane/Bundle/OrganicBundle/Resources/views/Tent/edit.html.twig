{% extends "::base.html.twig" %}

{% block body %}
<div class="row-fluid">

    <form action="{{ path('tent_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        
         <div class="row-fluid">
            <div class="actions">
                <button type="submit" class="btn btn-inverse">Save</button>
                <a href="{{ path('tent') }}" class="btn">
                        Back to the list
                </a>
            </div>
        </div>

<div class="row-fluid">
    <div class="span4">
            <div class="well">
                <div>
                    <label>Reference</label> <label><b>{{entity.reference}}</b></label>
                </div>
                {{form_row(edit_form.name)}}
                {{form_row(edit_form.ownerid)}}
                {{form_row(edit_form.comments)}}
            </div>
        </div>
        <div class="span4">
            <div class="well">
                {{form_row(edit_form.length)}}
                {{form_row(edit_form.width)}}
                {{form_row(edit_form.height)}}
                {{form_row(edit_form.weight)}}
                {{form_row(edit_form.m2)}}
            </div>
        </div>
        <div class="span4">
             <div class="well">
                {{ form_widget(edit_form) }}
            </div>
        </div>
    </div>    
       
        <div class="row-fluid">
            <div class="actions">
                <button type="submit" class="btn btn-inverse">Save</button>
                <a href="{{ path('tent') }}" class="btn">
                        Back to the list
                </a>
            </div>
        </div>
    </form>
</div>
<div class="row-fluid">
     <h4>Jobs</h4>
     <table class="table table-condensed table-bordered table-striped">
            <thead>
                <tr>
                    <th>Reference</th>
                    <th>Price VAT Exc.</th>
                    <th>Build</th>
                    <th>Take off</th>
                    <th>Offre</th>
                    <th>Invoice</th>
                </tr>
            </thead>
            {% for job in entity.tents2job %}
            <tr>
                <td><a href="{{path('job_edit',{'id':job.jobid.id})}}">{{job.jobid.reference}}</a></td>
                <td>{{job.jobid.price|number_format(2,',',' ')}}</td>
                <td>{{job.jobid.startBuild|date('d/m/Y H:i:s')}}</td>
                <td>{{job.jobid.endBuild|date('d/m/Y H:i:s')}}</td>
                <td>{{job.jobid.offreid}}</td>
                <td>{% for invoice in job.jobid.invoiceid %}<li><a href="{{path('invoice_edit',{'id':invoice.id} )}}">{{invoice.reference}}</a></li>{% endfor %}</td>
            </tr>
            {% endfor %}
        </table>
</div>
 <div class="row-fluid">
        <h4>Offres</h4>
        <table class="table table-condensed table-bordered table-striped">
            <thead>
                <tr>
                    <th>Reference</th>
                    <th>Price VAT Exc.</th>
                    <th>Build</th>
                    <th>Take off</th>
                    <th>Status</th>
                </tr>
            </thead>
            {% for offre in entity.tents2offre %}
            <tr>
                <td><a href="{{path('offre_edit',{'id':offre.id})}}">{{offre.offreid.reference}}</a></td>
                <td>{{offre.offreid.price|number_format(2,',',' ')}}</td>
                <td>{{offre.offreid.startBuild|date('d/m/Y H:i:s')}}</td>
                <td>{{offre.offreid.endBuild|date('d/m/Y H:i:s')}}</td>
                <td>{% if offre.offreid.jobid %}Job: <a href="{{path('job_edit',{'id':offre.offreid.jobid.id})}}">{{offre.offreid.jobid}}</a> {% else %}{{offre.offreid.status}} {% endif %}</td>

            </tr>
            {% endfor %}
        </table>
    </div>


{% endblock body %}
